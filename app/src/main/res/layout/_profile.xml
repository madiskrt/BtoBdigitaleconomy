<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/background_col"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/vdark_bg" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.307"
        app:srcCompat="@drawable/profile" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/profilbuttons"


        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/profilebutton"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:fontFamily="sans-serif-medium"
        android:text="Edit profile"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/dark_txt"
        android:textSize="24sp"
        app:backgroundTint="#FFB700"
        app:iconTint="#303135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imageView6" />

    <TextView
        android:id="@+id/profiletextView1"
        android:layout_width="385dp"
        android:layout_height="22dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="340dp"
        android:gravity="start"
        android:text="Name"
        android:textColor="#EAEBEF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:drawableTint="#303135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/profiletextView2"
        android:layout_width="384dp"
        android:layout_height="83dp"
        android:layout_marginStart="8dp"
        android:gravity="start"
        android:text="Lorem ipsum"
        android:textColor="#EAEBEF"
        android:textSize="14sp"
        app:drawableTint="#303135"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/profiletextView1"
        />

    <TextView
        android:id="@+id/profiletextView3"
        android:layout_width="385dp"
        android:layout_height="22dp"
        android:layout_marginStart="4dp"
        android:gravity="start"
        android:text="About me"
        android:textColor="#EAEBEF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:drawableTint="#303135"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/profiletextView2"
        />

    <TextView
        android:id="@+id/profiletextView4"
        android:layout_width="384dp"
        android:layout_height="83dp"
        android:layout_marginStart="8dp"
        android:gravity="start"
        android:text="Lorem ipsum"
        android:textColor="#EAEBEF"
        android:textSize="14sp"
        app:drawableTint="#303135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profiletextView3"
        />




</androidx.constraintlayout.widget.ConstraintLayout>